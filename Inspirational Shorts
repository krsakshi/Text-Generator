  <script>
    const responses = [
      "Every sunrise is a new chance to shine brighter than yesterday.",
      "Kindness costs nothing, but its value is beyond measure.",
      "Dream big, work hard, and stay humble.",
      "Happiness grows when you share it with others.",
      "Believe in yourself â€” you are stronger than you think.",
      "The smallest step in the right direction can change your whole story.",
      "Patience and consistency turn small efforts into big achievements.",
      "Even the darkest night ends with the light of dawn.",
      "Gratitude turns what we have into enough.",
      "Your smile can brighten someoneâ€™s entire day."
    ];

    const generateBtn = document.getElementById("generateBtn");
    const outputBox = document.getElementById("output");

    generateBtn.addEventListener("click", () => {
      const prompt = document.getElementById("promptInput").value.trim();
      const randomIndex = Math.floor(Math.random() * responses.length);
      const thought = responses[randomIndex];

      outputBox.classList.remove("show"); 
      void outputBox.offsetWidth; 
      outputBox.innerText = prompt ? `${prompt} â€” ${thought}` : thought;
      outputBox.classList.add("show");
    });
  </script>
